{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"parserOptions": {
		"sourceType": "commonjs"
	},
	"globals": {
		"CodeMirror": "readonly"
	},
	"rules": {
		"max-len": "off",
		"prefer-const": "warn"
	},
	"overrides": [
		{
			"files": [
				"addon/edit/*.js"
			],
			"rules": {
				"computed-property-spacing": [ "error", "never" ],
				"indent": [ "error", 2 ]
			}
		}
	]
}
